{
  "extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
  "rules": {
    "color-hex-case": "upper",
    "color-hex-length": "long",
    "no-descending-specificity": null,
    "string-quotes": "single" 
  },
  "overrides": [
    {
      "files": ["**/*.scss"],
      "customSyntax": "postcss-scss"
    }
  ]
}